mixin slider(name, id)
    .d-flex.align-items-center
        span.slider-left #{name}:
        input.flex-grow-1(
            type='range'
            class='form-control-range'
            id=id
        )
        span.slider-right(id=id + '-val') val

mixin clock
    .clock-face
        .hand
        .clock-tick.twelve
        .clock-tick.one
        .clock-tick.two
        .clock-tick.three
        .clock-tick.four
        .clock-tick.five
        .clock-tick.six
        .clock-tick.seven
        .clock-tick.eight
        .clock-tick.nine
        .clock-tick.ten
        .clock-tick.eleven

mixin ruler
    .ruler.mx-auto
        .ruler-tick.first
        .ruler-tick.second
        .ruler-tick.third
        .ruler-tick.fourth

mixin wave
    .container
        svg(viewBox='0 0 200 100')
            path(
                stroke='#000000'
                stroke-width='3'
                fill='none'
                d='M 0,50 C 20,0 30,0 50,50 S 80,100 100,50 S 130,0 150,50 S 180,100, 200,50'
            )
            path(
                stroke='#000000'
                stroke-width='2'
                stroke-dasharray='5,5'
                fill='none'
                d='M 0,50 L 200,50'
            )
            path(
                stroke='#000000'
                stroke-width='2'
                fill='none'
                d='M 180,45 L 200,50 L 180,55'
            )

doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        link(
            href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1'
            crossorigin='anonymous'
        )
        link(rel='stylesheet', type='text/css', href='/css/index.css')
        link(rel='shortcut icon', href='/images/gamma.png')
        title= 'Relativity Visualizer'
    body
        .container-fluid
            .z-1
                p#heading Special Relativity Visualizer
            #divider
            .row.align-items-start
                .col#left
                    #left-background
                    .top
                        h5 Rest Frame
                        .spacer-1
                        +clock
                        +ruler
                        .spacer-2
                        +wave
                .col#right
                    #right-background
                    .top
                        h5 Moving Frame
                        +slider('Velocity', 'speed')
                        +clock
                        +ruler
                        +slider('Angle', 'theta')
                        +slider('Color', 'hex')
                        +wave
    script(
        src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js'
        integrity='sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW'
        crossorigin='anonymous'
    )
    script(src='/js/index.js')